<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".capturar_foto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/foto_capturada"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:background="#e2e2e2"
        android:paddingBottom="30dp"></ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/descripcionCaptura_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Agregar una descripcion"
            android:layout_margin="20dp"></EditText>
        <Button
            android:id="@+id/btnCapturaFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_below="@id/descripcionCaptura_foto"
            android:text="Abrir camara"></Button>
    </RelativeLayout>

</LinearLayout>